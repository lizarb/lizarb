# view section_simple_filters.rb.erb

  def before
    @t = Time.now
    super
    log stick :b, cl.system.color, "params #{ params }"
  end
  
  def after
    super
    log "#{ time_diff @t }s | done"
  end
<% if @should_add_rescue_from -%>

  def rescue_from(e)
    log stick :red, "Exception raised during action #{action_name}: (#{e.class}) #{e.message}"
    puts "--- e.backtrace ---"
    puts e.backtrace
    puts "---"
    menv[:exception] = e
    # binding.irb
  end
<% end -%>